{
    "diagnostic.checkCurrentLine": true,
	"diagnostic.errorSign" : "x",
	"diagnostic.warningSign": "w",
	"diagnostic.infoSign": "i",
	"tsserver.enableJavascript": true,
    "coc.preferences.formatOnSaveFiletypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "eslint.autoFixOnSave": true,
    "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json", ".eslintrc.js"],
    "languageserver": {
		"terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		}
	}
}
